<?xml version="1.0" encoding="utf-8"?>

<Page x:Class="Amethyst.Popups.Splash" MinHeight="150" MinWidth="150"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="0,-30,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image Source="ms-appx:///Assets/ktvr.png" Height="100" Width="100"
               HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" />

        <ProgressRing IsActive="True" Grid.Row="2"
                      HorizontalAlignment="Center" VerticalAlignment="Center" />

    </Grid>
</Page>